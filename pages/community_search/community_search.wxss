page {
  height: 100%;
  /* background-color: #F5F5F5; */
  background: white;
}

.normalBgView {
  background: white;
}

.normalBgView-hidden {
  display: none;
}

/* 热搜 */
.hotSearchBgView {
  margin-top: 30rpx;
  background: white;
  /* background: yellow; */
}

.hotSearchTitleView {
  height: 60rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.hotSearchTitle {
  padding-left: 30rpx;
  font-size: 22px;
  color: #0066B2;
}

.hotSearchCleanText {
  font-size: 14px;
  display: flex;
  align-items: center;
  color: #0066B2;
  margin-right: 15rpx;
}

.hotSearchCleanBtn {
  padding-left: 16rpx;
  padding-right: 30rpx;
}

.hotSearchTagBgView {
  padding: 10rpx;
  display: flex;
  flex-wrap: wrap;
}

.hotSearchTag {
  width: auto;
  height: 48rpx;
  line-height: 48rpx;
  /* background: rgba(246, 246, 246, 1); */
  border-radius: 10rpx;
  padding: 5rpx 25rpx;
  font-weight: 400;
  font-size: 28rpx;
  color: white;
  margin: 10rpx;
  background: #B1D3EC;
  /* background: wheat; */
}

/* 搜索历史 */
.historyBgView {
  background: white;
}

.historyTitleView {
  margin-top: 20rpx;
  margin-bottom: 10rpx;
  height: 60rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.historyTitle {
  padding-left: 30rpx;
  font-size: 28rpx;
  font-size: 22px;
  color: #0066B2;
}

.historyCleanText {
  font-size: 14px;
  display: flex;
  align-items: center;
  color: #0066B2;
  margin-right: 15rpx;
}

.historyCleanBtn {
  padding-left: 16rpx;
  padding-right: 30rpx;
}

.historyTag {
  padding-left: 30rpx;
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 1px solid #B1D3EC;
  display: flex;
  align-items: center;
}

.historyIconLeft {
  flex: 5;
}

.historyText {
  flex: 90;
  padding-left: 25rpx;
  font-size: 28rpx;
  color: rgb(100, 100, 100);
}

.historyIconRight {
  flex: 5;
  padding-right: 30rpx;
}

.resultBgView {
  background: white;
}

.resultBgView-hidden {
  display: none;
}


.resultCell {
  padding-left: 30rpx;
  height: 100rpx;
  border-bottom: 1px solid rgb(230, 230, 230);
  display: flex;
  align-items: center;
}

.resultText {
  padding-left: 30rpx;
}
.search{
  width: 735rpx;
  height: 65rpx;
  padding: 12.5rpx 0 12.5rpx 15rpx;
  background: #2A8CE5;
}
.search-left{
  flex: 8;
  background: #4EA3E7;
  text-align: left;
}
.search-left input{
  display: inline-block;
  height: 65rpx;
  font-size: 26rpx;
}
.search-placeholder{
  color: #8CCEFD;
  line-height: 20rpx;
}
.search .search-left image{
  display: inline-block;
  width: 35rpx;
  height: 35rpx;
  padding: 15rpx 15rpx 15rpx 20rpx;
}
.search .search-right{
  flex: 1;
}
.search .search-right image{
  width: 45rpx;
  height: 45rpx;
  padding: 10rpx;
}

.img{
  width: 43rpx;
  height: 43rpx;
}
.img2{
  width: 37rpx;
  height: 37rpx;
}